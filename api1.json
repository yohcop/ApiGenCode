{
  "title": "API sample",
  "name": "SampleApi",

  "schemas": {
    "Location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      }
    },
    "GeoPoint": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "loc": { "$ref": "Location" },
        "type": {
          "type": "string",
          "enum": ["Flowers", "Bike shop", "Restaurant"]
        }
      }
    }
  },

  "methods": {
    "GetGeoPoints": {
      "path": "/getgeopoints",
      "description": "Retrieves the geopoints around the given point.",
      "request": {
        "type": "object",
        "properties": {
          "loc": { "$ref": "Location" },
          "radius": { "type": "number", "description": "in meters" },
          "namespace": {
            "type": "array",
            "items": { "type": "string" }
          },
          "parents": {
            "type": "array",
            "items": { "$ref": "GeoPoint" }
          },
          "data": {
            "enum": [
              "some string", 123, 45.6, ["foo", 3],
              {"asd": "fg"}
            ]
          }
        }
      },
      "response": {
        "type": "object",
        "properties": {
          "geopoints": {
            "type": "array",
            "items": { "$ref": "GeoPoint" }
          }
        }
      }
    }
  }
}
