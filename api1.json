{
  "title": "API sample",

  "properties": {
    "locations": { "$ref": "#/definitions/locations" }
  },
  "definitions": {
    "country": {
      "type": "object",
      "properties": {
        "locs": {
          "type": "array",
          "items": { "$ref": "#/definitions/Locations" }
        }
      }
    },
    "locations": {
      "type": "array",
      "items": { "$ref": "#/definitions/Location" },
      "links": [
        {
          "title": "Locations list",
          "rel": "self",
          "href": "/locations",
          "targetSchema": { "$ref": "#/definitions/locations" }
        },
        {
          "title": "New location",
          "rel": "new",
          "method": "POST",
          "encType": "application/x-www-form-urlencoded",
          "href": "/locations",
          "schema": { "$ref": "#/definitions/Location" },
          "targetSchema": { "$ref": "#/definitions/Location" }
        }
      ]
    },
    "Location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lon": { "type": "number" }
      }
    },
    "GeoPoint": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "loc": { "$ref": "Location" },
        "type": {
          "enum": ["Flowers", "Bike shop", "Restaurant"]
        },
        "typeid": {
          "type": "integer",
          "enum": [1, 2, 5]
        },
        "floatTypeId": {
          "type": "array",
          "items": {
            "enum": [1.2, 2, 5]
          }
        },
        "maybe": {
          "enum": [true, false]
        }
      }
    }
  },

  "methods": {
    "GetGeoPoints": {
      "path": "/getgeopoints",
      "description": "Retrieves the geopoints around the given point.",
      "request": {
        "type": "object",
        "properties": {
          "loc": { "$ref": "Location" },
          "radius": { "type": "number", "description": "in meters" },
          "namespace": {
            "type": "array",
            "items": { "type": "string" }
          },
          "parents": {
            "type": "array",
            "items": { "$ref": "GeoPoint" }
          },
          "visits": { "type": "integer" },
          "data": {
            "enum": [
              "some string", 123, 45.6, ["foo", 3],
              {"asd": "fg"}
            ]
          },
          "flags": {
            "type": "array",
            "items": {
              "enum": [ "user_contributed", "reference" ]
            }
          }
        }
      },
      "response": {
        "type": "object",
        "properties": {
          "geopoints": {
            "type": "array",
            "items": { "$ref": "GeoPoint" }
          }
        }
      }
    }
  }
}
